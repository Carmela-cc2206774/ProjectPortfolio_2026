generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model meal {
  id           Int    @id @default(autoincrement())
  userId       Int
  title        String
  tags         String
  calories     Int
  description  String
  satisfaction Int
  date         String
  image        String
}

